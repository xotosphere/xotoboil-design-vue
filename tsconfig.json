{
	"compileOnSave": true,
	"compilerOptions": {
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"types": ["node", "jest"],
		"strict": true,
		"jsx": "react",
		"paths": {"@/*": ["src/*"]},
		"noImplicitAny": false,
		"declaration": true,
		"declarationDir": "dist/types"
	},
	"include": ["src/**/*"]
}
